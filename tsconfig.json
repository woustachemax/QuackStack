{
  "compilerOptions": {
    /* Language */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* Project structure */
    "rootDir": "./src",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,

    /* Optional but nice to have */
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false
  },
  "include": ["src"]
}

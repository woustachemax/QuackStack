generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("QUACKSTACK_DATABASE_URL")
}

model codeSnippet {
  id        Int      @id @default(autoincrement())
  content   String
  embedding    Json   
  filePath     String   
  projectName  String 
  language     String?  
  functionName String?
  lineStart    Int?     
  lineEnd      Int?     
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectName])
}
